= form_for organization do |f|

  = render partial: 'partials/errors', locals: {model: organization}

  .field.form-group
    = f.label 'Изображение'
    = f.file_field :image
  .field.form-group
    = f.label 'ОГРН организации'
    = f.text_field :psrn, class: 'form-control'
  .row.field.form-group
    .col-md-6
      = f.label 'Правовая норма'
      = f.select :category, organization_category_selection
    .col-md-6
      = f.label 'Название'
      = f.text_field :name, class: 'form-control'
  .field.form-group
    = f.label 'Почта'
    = f.text_field :email, class: 'form-control', placeholder: 'name@email.domain'
  .field.form-group
    = f.label 'Телефон'
    = f.text_field :phone, class: 'form-control', placeholder: '+7-000-000-0000'
  .actions.form-group
    = f.submit 'Создать'
