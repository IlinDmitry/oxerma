.container
  .row.align-items-center{style: 'margin-top: 25px;'}
    .col-md-6
      %h1 Запросы
    .col-md-6.text-right
      = link_to 'Новый запрос', new_ticket_path, class: 'btn btn-primary'
  .row{style: 'margin-top: 25px;'}
    .col-md-12
      = render partial: 'partials/search'
  .row{style: 'margin-top: 25px;'}
    .col-md-8
      - tickets.each do |ticket|
        .row{style: 'margin-top: 25px;'}
          .col-md-3
            = image_tag ticket.image.url, class: 'img-thumbnail'
          .col-md-9
            .row
              .col-md-6
                %b= ticket.title
              .col-md-6.text-right
                %small.text-muted
                  Обновлено
                  = distance_of_time_in_words ticket.updated_at, Time.now
                  назад
            .row
    .col-md-4
      .card.card-default
        %b.card-header Фильтрация
        .card-body
          %div
            %div
              %b.text-muted Тип
            %div{style: 'margin-top: 10px;'}
              = select_tag "filter_type", options_for_select(["не выбрано", "требование", "предложение" ], "не выбрано")
          %div{style: 'margin-top: 25px;'}
            %div
              %b.text-muted Принадлежность
            %div{style: 'margin-top: 10px;'}
            = select_tag "filter_type", options_for_select(["не выбрано", "мои запросы", "запросы моих организаций", "все запросы"], "не выбрано")
          %div{style: 'margin-top: 25px;'}
            %div
              %b.text-muted Сортировка
            %div{style: 'margin-top: 10px;'}
            = select_tag "filter_type", options_for_select(["не выбрано", "по цене", "по рейтингу", "по дате",], "не выбрано")